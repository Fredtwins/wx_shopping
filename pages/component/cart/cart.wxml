<view class="main">
  <view wx:if="{{hasList}}">
    <view class="cart-box">
      <view class="cart-list" wx:for="{{carts}}" wx:key="{{index}}">
        <icon wx:if="{{item.selected}}" type="success" color="red" data-index="{{index}}" bindtap='selectList'></icon>
        <icon wx:else type="circle" class="cart-pro-select" data-index="{{index}}" bindtap='selectList'></icon>
      </view>
    </view>
  </view>
  <view wx:else>
    <view class="cart-no-data">购物车的是空的哦！！！</view>
  </view>
</view>